@page "/"
@inject NavigationManager Navigation

<h3>Добро пожаловать!</h3>

@if (IsAdmin)
{
    <a href="/users">Управление пользователями</a>
}
else
{
    <p>Вы вошли как обычный пользователь.</p>
}

@code {
    private bool IsAdmin = false; // Здесь должна быть логика проверки роли

    protected override void OnInitialized()
    {
        // Пример проверки роли (замените на реальную логику)
        IsAdmin = true; // Временно установлено true для тестирования
    }
}